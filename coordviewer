#!/usr/bin/env python3

import pyautogui
import tkinter as tk

def update_coordinates_label():
    x, y = pyautogui.position()
    coordinates_label.config(text=f'X: {x}, Y: {y}')
    root.after(100, update_coordinates_label)

root = tk.Tk()
root.title('Coordinate Viewer')

coordinates_label = tk.Label(root, font=('Arial', 12))
coordinates_label.pack(pady=10)

update_coordinates_label()

root.mainloop()
